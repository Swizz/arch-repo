pre_install() {
    ln -sf /usr/share/zoneinfo/Europe/Brussels /etc/localtime
    hwclock --systohc

    sed -i '/fr_BE.UTF-8 UTF-8/s/^#//g' /etc/locale.gen
    sed -i '/fr_FR.UTF-8 UTF-8/s/^#//g' /etc/locale.gen
    locale-gen
}

post_install() {
    mkinitcpio -p linux

    post_upgrade
}

post_upgrade() {
    cp etc/hosts etc/hosts.pacsave
    cp etc/locale.conf etc/locale.conf.pacsave
    mv etc/hosts.pacnew etc/hosts
    mv etc/locale.conf.pacnew etc/locale.conf
}
