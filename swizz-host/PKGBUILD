pkgname=swizz-host
pkgver=0.1.1
pkgrel=1
pkgdesc="System source configuration for Swizz systems"
arch=("any")
url="https://github.com/swizz/arch-repo"
license=("ISC")
source=(
    "hostname"
    "hosts"
    "locale.conf"
    "vconsole.conf"
)
backup=(
    "etc/hostname"
    "etc/hosts"
)
md5sums=(
    "3ac1eb379c8e9e2dd58474c695e75c0d"
    "319cd8666414021420e7d7def42f4cfe"
    "c8a16ef12d809324f4e926e002ef308c"
    "49a862d5b491bc6f421ca0864b906863"
)
install=swizz-host.install

package() {
    install -Dm644 hostname "$pkgdir/etc/hostname"
    install -Dm644 hosts "$pkgdir/etc/hosts.pacnew"
    install -Dm644 locale.conf "$pkgdir/etc/locale.conf.pacnew"
    install -Dm644 vconsole.conf "$pkgdir/etc/vconsole.conf"
}
